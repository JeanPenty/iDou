<include>
  <tabctrl name="tab_dev_info" size="-2,-2" tabHeight="0" animateSteps="0" curSel="1">
    <page>
      <window size="-2,-2" layout="hbox">
        <treeview size="190,-2" name="tv_ios" indent="0">
          <template >
            <item_group focusable="0" layout="vbox" size="-2,36"  colorHover="#dddbda" colorSelected="#c9c7c6">
              <text extend_left="12" weight="1" size="-2,0" align="bottom" name="Name" text="iPhone 11"/>
            </item_group>
            <item_data size="-2,36" layout="hbox" gravity="center" colorHover="#dddbda" colorSelected="#c9c7c6">
              <img extend_left="12" size="12,12" name="face"/>
