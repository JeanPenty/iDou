            <page>
              <tabctrl size="-2,-2" name="tab_dev_cmd" tabHeight="0" curSel="0">
                <page size="-2,-2" layout="hbox" gravity="center" clipClient="true">
                  <window weight="1"/>
                  <include src="layout:XML_MyDevice_Info"/>
                  <window weight="1"/>
                </page>
                <page layout="hbox" gravity="center">
                  <text text="cmd2"/>
                </page>
                <page layout="hbox" gravity="center">
                  <text text="cmd3"/>
                </page>
                <page layout="hbox" gravity="center">
                  <text text="cmd4"/>
                </page>
                <page layout="hbox" gravity="center">
                  <text text="cmd5"/>
                </page>
              </tabctrl>
            </page>
          </pageTemplate>
        </tabctrltemplate>
      </window>
    </page>
    <page layout="vbox" gravity="center" colorText="@color/gray" colorBkgnd="@color/white">
      <window weight="1"/>
      <img skin="skin_connect_dev"/>
      <text name="Txt_Tip" font="adding:12" text="欢迎使用爱豆助手，请用数据线将苹果设备连接到电脑"/>
      <text extend_top="20" font="adding:6" text="绿色！安全！"/>
      <text extend_top="8" text="管理您的苹果设备更轻松"/>
      <window weight="1"/>
      <img skin="skin_pro_pc_apps"/>
    </page>
  </tabctrl>
</include>