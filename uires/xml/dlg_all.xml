<SOUI width="388" height="-1"  margin="5,5,5,5"  resizable="0" toolWindow="1" translucent="1">
  <root>
    <window class="shadow_wnd">
      <window size="-2,-1" layout="vbox" padding="1,1,1,1">
        <caption size="-2,38" layout="hbox" gravity="top" colorText="#ffffff">
          <text extend_left="10" text="@string/DevInfo" layout_gravity="center"/>
          <text weight="1"/>
          <imgbtn id="IDOK" skin="_skin.sys.btn.close" tip="close" animate="1"/>
        </caption>
        <window size="-2,-1" layout="vbox" colorBkgnd="#ffffff" padding="10,10,10,10">
          <t:info_item>
            <data title="@string/DevName" name="lable_DevName"/>
          </t:info_item>
          <hr size="-2,1" colorLine="@color/infoborder"/>
          <t:info_item>
            <data title="@string/ActivationState" name="lable_ActivationState"/>
          </t:info_item>
          <hr size="-2,1" colorLine="@color/infoborder"/>
          <t:info_item>
            <data title="@string/IsJailreak" name="lable_IsJailreak"/>
          </t:info_item>
          <hr size="-2,1" colorLine="@color/infoborder"/>
          <t:info_item>
            <data title="@string/HardwareModel" name="lable_HardwareModel"/>
          </t:info_item>
          <hr size="-2,1" colorLine="@color/infoborder"/>
          <t:info_item>
            <data title="@string/ProductType" name="lable_ProductType"/>
          </t:info_item>
          <hr size="-2,1" colorLine="@color/infoborder"/>
          <t:info_item>
            <data title="@string/BluetoothAddress" name="lable_BluetoothAddress"/>
          </t:info_item>
          <hr size="-2,1" colorLine="@color/infoborder"/>
          <t:info_item>
            <data title="@string/WiFiAddress" name="lable_WiFiAddress"/>
          </t:info_item>
          <hr size="-2,1" colorLine="@color/infoborder"/>
          <t:info_item>
            <data title="@string/CPU" name="lable_CPU"/>
          </t:info_item>         
        </window>
      </window>
    </window>
  </root>
</SOUI>
